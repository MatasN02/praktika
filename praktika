class AcademicSystem:
    # ... (existing code)

    def update_student_info(self, student_id, new_first_name, new_last_name):
        self.cursor.execute('''
            UPDATE students
            SET first_name = ?, last_name = ?
            WHERE id = ?
        ''', (new_first_name, new_last_name, student_id))
        self.conn.commit()

    def remove_student(self, student_id):
        self.cursor.execute('''
            DELETE FROM students
            WHERE id = ?
        ''', (student_id,))
        self.conn.commit()

    # ... (similar changes for teacher operations)
