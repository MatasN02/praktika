import hashlib

class AcademicSystem:
    # ... (existing code)

    def hash_password(self, password):
        # Use a secure hashing algorithm (e.g., SHA-256)
        return hashlib.sha256(password.encode()).hexdigest()

    def register_teacher(self, first_name, last_name):
        login_name = first_name
        password = last_name
        hashed_password = self.hash_password(password)

        # Store hashed password in the database
        self.cursor.execute('''
            INSERT INTO teachers (first_name, last_name, password)
            VALUES (?, ?, ?)
        ''', (first_name, last_name, hashed_password))
        self.conn.commit()
        return login_name, password  # Note: Returning plain password for demonstration purposes

    # ... (similar changes for student registration)
